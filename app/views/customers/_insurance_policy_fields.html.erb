<div style="width: 60rem;">
    <% if f.object.new_record? %>
    <div class='nested-fields well'>
        <div class="form-group">
          <%= f.label :policyno %>
          <%= f.text_field :policyno, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :insurer %>
          <%= f.text_field :insurer, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :insurance_type %>
          <%= f.text_field :insurance_type, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :value %>
          <%= f.text_field :value, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :current_expiry %>
          <%= f.date_select :current_expiry, class: "form-control" %>
        </div>
        <div>
          <%= f.submit "Save", class: "btn btn-primary" %>
          <%= link_to_remove_association "Remove Insurance Policy", f, class: "btn btn-danger", role: "button" %>
        </div>
        <br />
      </div>
      <% end %>
</div>
